<h1 class="text-4xl font-bold text-center my-8">Patients</h1>
<div class="my-8 text-center">
  <%= link_to "New patient", new_patient_path, class: "inline-block px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-sm" %>
</div>

<div id="patients" class="max-w-4xl mx-auto space-y-8">
  <% @patients.each do |patient| %>
    <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
      <p class="text-lg">
        <strong class="font-bold text-gray-700">Name:</strong>
        <%= patient.name %>
      </p>

      <p class="text-lg mt-2">
        <strong class="font-bold text-gray-700">Doctor:</strong>
        <%= patient.doctor.email %>
      </p>

      <p class="mt-4">
        <%= link_to "Show this patient", patient, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      </p>
    </div>
  <% end %>
</div>

