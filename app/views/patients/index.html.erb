<h1 class="text-4xl font-bold text-center my-8">Patients</h1>

<div class="my-8 text-center">
  <%= link_to "New patient", new_patient_path, class: "inline-block px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-sm" %>
</div>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-300 shadow-md rounded-lg">
    <thead class="bg-gray-100 border-b border-gray-300">
      <tr>
        <th class="py-3 px-4 text-left text-gray-700 font-semibold">Name</th>
        <th class="py-3 px-4 text-left text-gray-700 font-semibold">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr class="border-b border-gray-300">
          <td class="py-4 px-6 text-gray-700">
            <%= patient.name %>
          </td>
          <td class="py-4 px-6">
            <%= link_to "Show this patient", patient, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
