<div class="min-h-screen flex flex-col items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white shadow-md rounded-lg p-6 border border-gray-200">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Patient Details</h1>

    <div class="mb-4">
      <p class="text-lg font-medium text-gray-800"><strong>Name:</strong> <%= @patient.name %></p>
      <p class="text-lg font-medium text-gray-800"><strong>Doctor:</strong> <%= @patient.doctor.email %></p>
    </div>

    <div class="mt-6 flex justify-between items-center">
      <%= link_to "Edit this patient", edit_patient_path(@patient), class: "text-indigo-600 hover:text-indigo-700 font-medium" %>

      <div>
        <%= link_to "Back to patients", patients_path, class: "text-gray-600 hover:text-gray-800 font-medium mr-4" %>

        <%= button_to "Delete this patient", @patient, method: :delete, 
          class: "inline-block px-4 py-2 text-white bg-red-600 hover:bg-red-700 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>
  </div>
</div>
