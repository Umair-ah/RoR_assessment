<%= form_with(model: appointment, local: true, class: "max-w-lg mx-auto space-y-6") do |form| %>

  <% if appointment.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2 class="font-bold mb-2"><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
      <ul class="list-disc pl-5">
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :doctor_id, class: "block text-gray-700 font-medium" %>
    <%= form.collection_select :doctor_id, Doctor.order(:email), :id, :email, {}, class: "form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="space-y-2">
    <%= form.label :patient_id, class: "block text-gray-700 font-medium" %>
    <%= form.collection_select :patient_id, Patient.order(:name), :id, :name, {}, class: "form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="space-y-2">
    <%= form.label :apptmt_date_time, class: "block text-gray-700 font-medium" %>
    <%= form.datetime_field :apptmt_date_time, class: "form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="text-center">
    <%= form.submit appointment.new_record? ? 'Create' : 'Update', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow-md" %>
  </div>

<% end %>
