<h1 class="text-4xl font-bold text-center my-8">Doctors</h1>
<div class="my-8 text-center">
  <%= link_to "New Doctor", new_doctor_path, class: "inline-block px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-sm" %>
</div>

<div id="patients" class="max-w-4xl mx-auto space-y-8">
  <% @doctors.each do |doctor| %>
    <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200 flex items-center justify-between">
      <div>
        <p class="text-lg">
          <strong class="font-bold text-gray-700">Email:</strong>
          <%= doctor.email %>
        </p>
      </div>

      <div>
        <%= link_to "Change Password", edit_doctor_path(doctor, email: doctor.email), class: "hover:cursor-pointer w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500" %>

      </div>

    </div>
  <% end %>
</div>

