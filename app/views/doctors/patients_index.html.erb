<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Welcome Doctor <%= current_user.email %></h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-300 mb-6">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b border-gray-300 bg-gray-100 text-left">Patient Name</th>
          <th class="py-2 px-4 border-b border-gray-300 bg-gray-100 text-left">Appointment Date & Time</th>
        </tr>
      </thead>
      <tbody>
        <% @docs_appointments.each do |aptmt| %>
          <tr class="hover:bg-gray-100">
            <td class="py-2 px-4 border-b border-gray-300"><%= aptmt.patient.name %></td>
            <td class="py-2 px-4 border-b border-gray-300">
              <%= aptmt.apptmt_date_time.strftime("%B %d, %Y %I:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="w-full max-w-4xl mx-auto">
      <canvas
        id="patients-chart"
        class="w-full h-auto"
        data-controller="chart"
        data-chart-data-value="<%= @chart_data.to_json %>"
        data-chart-options-value="<%= @chart_options.to_json %>"
      ></canvas>
    </div>

  </div>
</div>
